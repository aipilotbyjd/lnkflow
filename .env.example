# LinkFlow Root Environment Variables
# Copy this file to .env and customize for your environment
# NEVER commit your actual .env file to version control

# ============================================
# Security Secrets
# ============================================
# CRITICAL: Generate new secrets for production!
# Use: openssl rand -base64 32

# JWT secret for API authentication (minimum 32 characters)
JWT_SECRET=your-jwt-secret-change-in-production

# Shared secret with Laravel API for callback authentication
# Must match the LINKFLOW_SECRET in your Laravel .env
LINKFLOW_SECRET=your-linkflow-secret-change-in-production

# ============================================
# Infrastructure
# ============================================
POSTGRES_USER=linkflow
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=linkflow
REDIS_PORT=6379

# ============================================
# Service Configuration
# ============================================
LOG_LEVEL=info
REGION=local
CELL_ID=cell-1
